{% extends '@GDSSPlatform/layoutGDSS.html.twig' %}

{% block title %}Modifications des phases{% endblock %}
{% block curentSujet %}active{% endblock %}

{% block body %}
    <div class="container">
        <h1 style="text-align: center">Modifications des phases</h1>
        <hr>
        <div class="well" style="margin-left: 25%">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <h3></h3>
            <div class="form-group">

                <div class="">
                    <div class="form-group">
                        {{ form_label(form.DateDebut, "Date de début", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        {{ form_errors(form.DateDebut) }}
                        <div class="col-sm-7">
                            {{ form_widget(form.DateDebut, { 'attr': {'data-field': 'datetime'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.Dureemin, "Durée minimale", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        {{ form_errors(form.Dureemin) }}
                        <div class="row" style="margin-left: 0px">
                            <div class="col-sm-3 col">
                                {{ form_widget(form.Dureemin) }}
                            </div>
                            <div class="col-sm-4 col">
                                {{ form_widget(form.Periodemin) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.Dureemax, "Durée maximale", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        {{ form_errors(form.Dureemax) }}
                        <div class="row" style="margin-left: 0px">
                            <div class="col-sm-3 col">
                                {{ form_widget(form.Dureemax) }}
                            </div>
                            <div class="col-sm-4 col">
                                {{ form_widget(form.Periodemax) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br/>
            {{ form_widget(form.Terminer, {'attr': {'class': 'btn btn-primary'}}) }}

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {% if erreur is defined %}
        <script type="text/javascript">
            alert("{{ erreur }}");
        </script>
    {% endif %}
{% endblock %}