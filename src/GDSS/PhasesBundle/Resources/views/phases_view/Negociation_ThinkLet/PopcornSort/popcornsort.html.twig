{% extends '@GDSSPhases/phases_view/Negociation_ThinkLet/negocitation.html.twig' %}

{% block title %}PopCornSort - Categorizer{% endblock %}

{% block content %}
    <div style="margin-right: 25%; margin-left: 5%">
        {% block subtitle %}
            <h1 style="text-decoration-style: double; margin-left: -15%"><a href="{{ path('negociation', {'id' : backid}) }}"><i class="fas fa-arrow-left"></i></a> PopCornSort - Categorizer</h1>
        {% endblock %}

        <br/>
        <div>
            <div style="position: absolute; max-width: 34%">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active show" data-toggle="tab" href="#noncategoriser">CONTRIBUTION NON CATEGORISEES</a>
                    </li>
                </ul>

                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade show active" id="noncategoriser">

                        <form method="post" href="#">
                            <div class="form-group">
                                {% for ct in contribution %}
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="customCheck{{ ct.id }}" name="{{ ct.id }}" value="{{ ct.id }}">
                                        <label class="custom-control-label" for="customCheck{{ ct.id }}">
                                            <i class="outgoing_msg">
                                                <i class="sent_msg" style="float: none">
                                                    <p><span>{{ ct.pseudo }}<br/></span> {{ ct.contribution }} </p>
                                                </i>
                                            </i>

                                            {% set coll = false %}
                                            {% for cmt in comment %}
                                                {% if cmt.contribution == ct %}
                                                    {% set coll = true %}
                                                {% endif %}
                                            {% endfor %}
                                            {% if coll == true %}
                                                <a class="fas fa-plus-circle" data-toggle="collapse" href="#noncatego{{ ct.id }}" role="button" aria-expanded="false" aria-controls="like{{ ct.id }}"></a>
                                            {% endif %}

                                            <div class="collapse" id="noncatego{{ ct.id }}">
                                                {% for cmt in comment %}
                                                    {% if cmt.contribution == ct %}
                                                        <i class="incoming_msg" style="margin-left: 50px">
                                                            <i class="received_msg">
                                                                <i class="received_withd_msg">
                                                                    <p><span>{{ cmt.pseudo }}</span><br/>{{ cmt.comment }}</p>
                                                                </i>
                                                            </i>
                                                        </i>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>

                                            <br/><br/>
                                        </label>
                                    </div>
                                {% endfor %}
                                <div class="form-inline">
                                    {% if contribution %}
                                        <div class="col-sm-3">
                                            <select class="form-control" id="exampleFormControlSelect1" name="categorie">
                                                {% for cat in categories %}
                                                    <option>{{ cat.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-sm-2" style="margin-left: 20%">
                                            <input type="submit" value="Catégoriser" class="btn btn-warning" name="Catégoriser">
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </form>

                        <br/><br/>
                    </div>

                </div>


            </div>

            <div style="position: absolute; width: 34%; margin-left: 37%; background-color: white; border: 2px groove white">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active show" data-toggle="tab2" href="#categoriser">CATEGORIES</a>
                    </li>
                </ul>

                <div id="myTabContent" class="tab2-content">
                    <div class="tab2-pane fade show active" id="categoriser">

                        <br/>
                        {% if admin %}
                            <p class="hidden-xs"><a href="#" class="add-project" data-toggle="modal" data-target="#add_project">Créer une catégorie</a></p>
                        {% endif %}

                        {% set showdecategorirer = false  %}
                        <form method="post" href="#">
                            <div class="form-group">
                                {% for catego in categories %}
                                    <h2>{{ catego.name }}</h2>
                                    <hr/>
                                    {% for ctcat in contributioncat %}
                                        {% if ctcat.categorie == catego.name %}
                                            {% set showdecategorirer = true  %}
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="customCheck{{ ctcat.id }}" name="{{ ctcat.id }}" value="{{ ctcat.id }}">
                                                <label class="custom-control-label" for="customCheck{{ ctcat.id }}">
                                                    <i class="outgoing_msg">
                                                        <i class="sent_msg" style="float: none">
                                                            <p><span>{{ ctcat.pseudo }}<br/></span> {{ ctcat.contribution }} </p>
                                                        </i>
                                                    </i>
                                                    {% set coll = false %}
                                                    {% for cmt in comment %}
                                                        {% if cmt.contribution == ctcat %}
                                                            {% set coll = true %}
                                                        {% endif %}
                                                    {% endfor %}
                                                    {% if coll == true %}
                                                        <a class="fas fa-plus-circle" data-toggle="collapse" href="#catego{{ ctcat.id }}" role="button" aria-expanded="false" aria-controls="like{{ ctcat.id }}"></a>
                                                    {% endif %}

                                                    <div class="collapse" id="catego{{ ctcat.id }}">
                                                        {% for cmt in comment %}
                                                            {% if cmt.contribution == ctcat %}
                                                                <i class="incoming_msg" style="margin-left: 50px">
                                                                    <i class="received_msg">
                                                                        <i class="received_withd_msg">
                                                                            <p><span>{{ cmt.pseudo }}</span><br/>{{ cmt.comment }}</p>
                                                                        </i>
                                                                    </i>
                                                                </i>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </div>

                                                    <br/><br/>
                                                </label>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                    <br/>
                                {% endfor %}

                                <div class="form-inline">
                                    <div class="col-sm-11">
                                        {% if showdecategorirer %}
                                            <input type="submit" value="Décatégoriser" class="btn btn-warning" name="Décatégoriser">
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </form>

                        <br/><br/>
                    </div>
                </div>

            </div>

        </div>





    </div>

    <div id="add_project" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header login-header">
                    <button type="button" class="close" data-dismiss="modal">X</button>
                    <h4 class="modal-title">Créer une catégorie</h4>
                </div>
                {{ form_start(form) }}

                <div style="margin-top: 5px; font-size: large">
                    {{ form_label(form.Nom) }}
                </div>

                <div style="margin-left: 5px; margin-right: 5px">
                    {{ form_widget(form.Nom, {'attr': {'class': 'modal-body'}}) }}
                </div>

                <div class="modal-footer">
                    <button type="button" class="cancel" data-dismiss="modal">Fermer</button>
                    {{ form_widget(form.Creer, {'attr': {'class': 'add-project'}}) }}
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>

{% endblock %}

{% block customstyle %}
    <link rel="stylesheet" href="{{ asset('bundles/gdssplatform/css/Repertoire.css') }}" type="text/css">
    {% if error is defined %}
        <script>
            alert("{{ error }}");
        </script>
    {% endif %}
{% endblock %}