{% extends '@GDSSPlatform/CreateProblem/addproblem.html.twig' %}
{% block title %}Processus{% endblock %}

{% block active0 %}disabled{% endblock %}
{% block active2 %}active{% endblock %}

{% block contenu %}
    <div class="container" style="margin: 0px auto">
        <h1 style="text-align: center">Définition du Processus</h1>
            <br/>
            <br/>
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.name, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.name) }}
                <div class="">
                    {{ form_widget(form.name, {'attr' : {'disabled' : 'disabled'}}) }}
                </div>
            </div>
            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.description, "Description", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.description) }}
                <div class="">
                    {{ form_widget(form.description, {'attr' : {'disabled' : 'disabled'}}) }}
                </div>
            </div>
            {# Idem pour un autre champ. #}
            <div class="form-group">
                {{ form_label(form.participantMin, 'Nombre de participants minimal', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                {{ form_errors(form.participantMin) }}
                <div class="">
                    {{ form_widget(form.participantMin, {'attr' : {'min' : 3, 'max' : 20, 'disabled' : 'disabled'}} ) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.participantMax, 'Nombre de participants maximal', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                {{ form_errors(form.participantMax) }}
                <div class="">
                    {% if process.participantMax == null %}
                        {{ form_widget(form.participantMax, {'attr' : {'min' : 6, 'max' : 20}} ) }}
                    {% else %}
                        {{ form_widget(form.participantMax, {'attr' : {'min' : 3, 'max' : 20, 'disabled' : 'disabled'}} ) }}
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.anonymous, "Statut des decideurs", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                {{ form_errors(form.anonymous) }}
                <div class="">
                    {{ form_widget(form.anonymous) }}
                </div>
            </div>

            <br/>
            {{ form_widget(form.Suivant, {'attr': {'class': 'btn linkstyle'}}) }}
            {{ form_end(form) }}

            <br/>
            <br/>
    </div>
{% endblock %}

{% block help %}
    <p class="text-center">Définissez le processus</p>
{% endblock %}