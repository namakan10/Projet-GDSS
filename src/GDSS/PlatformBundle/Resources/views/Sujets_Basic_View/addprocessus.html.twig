{% extends '@GDSSPlatform/Sujets_Basic_View/addSujet.html.twig' %}
{% block title %}Processus{% endblock %}

{% block active0 %}disabled{% endblock %}
{% block active2 %}active{% endblock %}

{% block contenu %}
    <div class="container">
        <div style="width: 800px; margin-left: 240px">
                <br/>
                <br/>
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <div class="form-group">
                    {# Génération du label. #}
                    {{ form_label(form.Nom, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.Nom) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.Nom) }}
                    </div>
                </div>
                <div class="form-group">
                    {# Génération du label. #}
                    {{ form_label(form.Description, "Description", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.Description) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.Description) }}
                    </div>
                </div>
                {# Idem pour un autre champ. #}

                <div class="form-group">
                    {{ form_label(form.anonyme, "Statut des decideurs", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                    {{ form_errors(form.anonyme) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.anonyme) }}
                    </div>
                </div>

                <br/>
                {{ form_widget(form.Suivant, {'attr': {'class': 'btn linkstyle'}}) }}
                {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {% if erreur is defined %}
        <script type="text/javascript">
            alert("{{ erreur }}");
        </script>
    {% endif %}
{% endblock %}