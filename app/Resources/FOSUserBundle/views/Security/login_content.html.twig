{% trans_default_domain 'FOSUserBundle' %}



<div class="col-md-4 login-sec">
    <h2 class="text-center">Identifiez-vous</h2>

        <form action="{{ path("fos_user_security_check") }}" method="post" class="login-form">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="form-group">
                <label for="username" class="text-uppercase">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control" />
            </div>

            <div class="form-group">
                <label for="password" class="text-uppercase">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control"/>
            </div>

            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  class="btn btn-login float-right"/>
        </form>

    <div class="copy-text">
        <p style="position: fixed; margin-top: -73px">
            <a href="{{ path('fos_user_registration_register') }}" style="font-size: large">S'incrire</a>   -    <a href="#" style="font-size: large">Mot de passe oublié</a>
        </p>

        {% if error %}
            <script type="text/javascript">
                alert('{{ error.messageKey|trans(error.messageData, 'security') }}');
            </script>
        {% endif %}

        <br/>
        Created <i class="fa fa-heart"></i> by <a>Ghost Studio © {{ 'now'|date('Y') }} all right reverved.</a>
    </div>



</div>

<div class="col-md-8 banner-sec">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="pos" src="{{ asset('bundles/gdssplatform/images/GDSS.jpg') }}">
            </div>
        </div>
    </div>
    <div class="textpos"><p>Group Decision Support System</p></div>
</div>


